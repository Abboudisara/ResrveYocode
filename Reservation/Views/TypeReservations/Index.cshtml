@model IEnumerable<Reservation.Data.TypeReservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreApp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreApp)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_type }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_type }, new { @class = "btn btn-success" })|
                @Html.ActionLink("Delete", "Delete", new { id = item.id_type }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
