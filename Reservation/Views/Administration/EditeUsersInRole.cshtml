@model List<Reservation.ViewModels.UserRoleViewModel>

@{ 
    var roleId = ViewBag.roleId;

}

<form method="post">
    <div class="card">

        <div class="card-header">
           Add or Remove Users
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var uniqueName = "User" + i;
                    <div class="form-check m-1">
                        <input hidden asp-for="@Model[i].UserId" />
                        <input hidden asp-for="@Model[i].UserName" />
                        <input asp-for="@Model[i].IsSelected" id="@uniqueName" class="form-check-input" />
                        <label for="@uniqueName" class="form-check-label">@Model[i].UserName</label>
                    </div>

                }

            </div>

        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto"/>
            <a asp-action="EditeRole" asp-route-id="@roleId" class="btn btn-primary" style="width:auto">Cancel</a>

        </div>
    </div>
        

</form>